{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "plugin:react/recommended",
        "plugin:react-hooks/recommended",
        "plugin:prettier/recommended"
      ],
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
            "react/prop-types": 0,
            "no-unused-vars": [
                "warn",
                {
                    "args": "none",
                    "argsIgnorePattern": "req|res|next|val" 
                }
            ],
            "prettier/prettier": [
                "error",
                {
                    "endOfLine": "auto"
                }
            ]
    },
    "settings": {
        "react": {
            "version": "detect"
        }
    }
}